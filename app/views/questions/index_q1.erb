<% nums = []%>
<% 10.times do  %>
  <% nums << rand(9)+1 %>
<% end %>
<div class='index-title-box'>
    <div class='index-title'>
      <p>一桁の足し算</p>
    </div>
</div>
<div class ='question-wrapper'>
<%= form_with model: @question, local: true do |form| %>

    <div class='q'>
      <div class='q-title'>
      <%= "#{nums[0]} ＋ #{nums[1]} =" %>
      <%= form.text_field :answer1 %>
      </div>
    </div>
    <div class='q'>
      <div class='q-title'>
      <%= "#{nums[2]} ＋ #{nums[3]} =" %>
      <%= form.text_field :answer2 %>
      </div>
    </div>
    <div class='q'>
      <div class='q-title'>
      <%= "#{nums[4]} ＋ #{nums[5]} =" %>
      <%= form.text_field :answer3 %>
      </div>
    </div>
    <div class='q'>
      <div class='q-title'>
      <%= "#{nums[6]} ＋ #{nums[7]} =" %>
      <%= form.text_field :answer4 %>
      </div>
    </div>
    <div class='q'>
      <div class='q-title'>
      <%= "#{nums[8]} ＋ #{nums[9]} =" %>
      <%= form.text_field :answer5 %>
      </div>
    </div>
</div>
<%= form.submit %>
<% end %>